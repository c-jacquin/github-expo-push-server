{
  "name": "github-expo-push-server",
  "description": "push notification server between github and expo.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/charjac/github-expo-push-server.git"
  },
  "bugs": {
    "url": "https://github.com/charjac/github-expo-push-server/issues"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "start": "cross-env PROJECT_ENV=staging node --use-strict ./src/app.js",
    "dev": "cross-env PROJECT_ENV=local nodemon --use-strict ./src/app.js",
    "local:start": "cross-env PROJECT_ENV=local npm run daemon:start",
    "local:stop": "cross-env PROJECT_ENV=local npm run daemon:stop",
    "staging:start": "cross-env PROJECT_ENV=staging npm run daemon:start",
    "staging:stop": "cross-env PROJECT_ENV=staging npm run daemon:stop",
    "test": "cross-env PROJECT_ENV=testing jest --coverage --forceExit --config jest-config.json",
    "test:watch": "cross-env PROJECT_ENV=testing jest --watch",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "lint": "eslint .",
    "raml": "raml2html -i doc/api/api.raml -o api.html",
    "daemon:start": "forever --uid api-koa-starter -a -c 'node --use-strict' start ./src/app.js",
    "daemon:stop": "forever stop api-koa-starter || true"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^3.3.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.3.0",
    "ramda": "^0.25.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "uuid": "^3.1.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.4.0",
    "forever": "^0.15.3",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "mockery": "^2.1.0",
    "nodemon": "^1.14.7",
    "prettier": "^1.9.2",
    "raml2html": "^6.4.2",
    "sinon": "^4.1.3",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2",
    "throng": "^4.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*(*.ts|*.tsx)": [
      "eslint . --fix",
      "git add -A"
    ]
  }
}
