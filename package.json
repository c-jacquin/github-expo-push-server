{
  "name": "github-expo-push-server",
  "description": "push notification server between github and expo.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/charjac/github-expo-push-server.git"
  },
  "bugs": {
    "url": "https://github.com/charjac/github-expo-push-server/issues"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "start": "cross-env PROJECT_ENV=staging pm2 start ./src/app.js -i max --attach",
    "dev": "cross-env PROJECT_ENV=local nodemon --use-strict ./src/app.js",
    "test": "cross-env PROJECT_ENV=testing jest --coverage --forceExit --config jest-config.json",
    "test:watch": "cross-env PROJECT_ENV=testing jest --watch",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "lint": "eslint .",
    "docs": "raml2html -i api.raml -o docs/index.html"
  },
  "dependencies": {
    "cross-env": "^5.1.3",
    "debug": "^3.1.0",
    "expo-server-sdk": "^2.3.3",
    "koa": "^2.4.1",
    "koa-body": "^2.5.0",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^3.3.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.3.0",
    "mongoose": "^5.0.0",
    "mongoose-mock": "^0.4.0",
    "pm2": "^2.9.1",
    "ramda": "^0.25.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "uuid": "^3.1.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.4.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.0",
    "mockery": "^2.1.0",
    "nock": "^9.1.6",
    "nodemon": "^1.14.7",
    "prettier": "^1.9.2",
    "raml2html": "^6.4.2",
    "sinon": "^4.1.3",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*(*.ts|*.tsx)": [
      "eslint . --fix",
      "git add -A"
    ]
  }
}
