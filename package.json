{
  "name": "github-expo-push-server",
  "description": "push notification server between github and expo.",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/charjac/github-expo-push-server.git"
  },
  "bugs": {
    "url": "https://github.com/charjac/github-expo-push-server/issues"
  },
  "engines": {
    "node": ">= 8"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=staging pm2 start ./dist/app.js -i max --attach",
    "dev": "cross-env NODE_ENV=local nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' src/app.ts",
    "build": "tsc && copyfiles -u 2 src/translations/*.json dist/translations",
    "test": "cross-env NODE_ENV=test jest --forceExit --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "precommit": "lint-staged",
    "cz": "git-cz",
    "lint": "tslint --project . --fix",
    "docs": "raml2html -i api.raml -o docs/index.html"
  },
  "dependencies": {
    "@types/supertest": "^2.0.4",
    "awilix": "^3.0.4",
    "awilix-koa": "^2.1.0",
    "axios": "^0.17.1",
    "check-types": "^7.3.0",
    "clf-date": "^0.1.0",
    "cross-env": "^5.1.3",
    "expo-server-sdk": "^2.3.3",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-helmet": "^3.3.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.3.0",
    "mongodb": "^2.2.33",
    "node-polyglot": "^2.2.2",
    "pm2": "^2.9.3",
    "ramda": "^0.25.0",
    "reflect-metadata": "^0.1.12",
    "request": "^2.83.0",
    "typeorm": "^0.1.11",
    "typescript": "^2.6.2",
    "uuid": "^3.2.1",
    "winston": "^2.4.0",
    "yenv": "^1.0.6"
  },
  "devDependencies": {
    "@types/check-types": "^7.3.0",
    "@types/glob": "^5.0.35",
    "@types/jest": "^22.1.0",
    "@types/koa": "^2.0.43",
    "@types/koa-bodyparser": "^4.2.0",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-morgan": "^1.0.4",
    "@types/node": "^9.4.0",
    "@types/node-polyglot": "^0.4.30",
    "@types/ramda": "^0.25.16",
    "@types/request": "^2.0.13",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.7",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "commitizen": "^2.9.6",
    "copyfiles": "^1.2.0",
    "coveralls": "^3.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "nock": "^9.1.6",
    "nodemon": "^1.14.11",
    "prettier": "^1.10.2",
    "raml2html": "^6.6.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*(*.ts|*.tsx)": [
      "lint --fix",
      "git add -A"
    ]
  }
}
